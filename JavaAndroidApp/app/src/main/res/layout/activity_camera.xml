        android:scaleType="centerCrop"
        android:id="@+id/bottom_right_tile_placeholder"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:background="@drawable/cube"
        android:scaleType="centerCrop"
        android:id="@+id/bottom_center_tile_placeholder"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:background="@drawable/cube"
        android:scaleType="centerCrop"
        android:id="@+id/bottom_left_tile_placeholder"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:background="@drawable/cube"
        android:scaleType="centerCrop"
        android:id="@+id/top_center_tile_placeholder"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:background="@drawable/cube"
        android:scaleType="centerCrop"
        android:id="@+id/top_left_tile_placeholder"/>

    <ImageButton
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_marginTop="0px"
        android:layout_marginLeft="0px"
        android:background="@drawable/cube"
        android:scaleType="centerCrop"
        android:id="@+id/top_right_tile_placeholder"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="171dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

